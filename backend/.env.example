# Application settings
APP_NAME=CLaiM
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database settings
DATABASE_URL=sqlite:///./claim.db
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=documents

# Model paths
MODELS_DIR=../models
DISTILBERT_MODEL=distilbert-legal.gguf
PHI_MODEL=phi-3.5-mini-Q4_K_M.gguf
EMBEDDINGS_MODEL=all-MiniLM-L6-v2.gguf

# Privacy settings
DEFAULT_PRIVACY_MODE=FULL_LOCAL

# Optional API keys (for hybrid mode)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# File storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600  # 100MB
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg

# Performance settings
MAX_WORKERS=4
BATCH_SIZE=32
CACHE_SIZE=1000

# Security
SECRET_KEY=change-this-in-production
CORS_ORIGINS=http://localhost:5173,http://localhost:3000